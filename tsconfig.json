{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "strict": true,
    "declaration": true,
    "outDir": "dist",
    "skipLibCheck": true,

    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,

    "types": ["vite/client", "react", "react-dom"]
  },
  "include": ["src", ".storybook"]
}
